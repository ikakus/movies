<resources>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/astronaut</item>
        <item name="android:textSize">18sp</item>
        <item name="android:windowBackground">@color/ghost_white</item>
    </style>

    <style name="Toolbar.ModuleToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/ghost_white</item>
    </style>

    <style name="ExpandedToolbar.TitleText" parent="Toolbar.TitleText">
        <item name="android:textColor">@color/ghost_white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CollapsedToolbar.TitleText" parent="Toolbar.TitleText">
        <item name="android:textColor">@color/ghost_white</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="MovieTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@drawable/ic_dot</item>
    </style>

    <style name="MovieTextView" parent="Widget.AppCompat.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
